<div id="headerDiv">
  <p class="h5">- YOUR COCKTAILS -</p>
  <p class="h6">Welcome, {{username}}</p>
  <p class="h6">Here you have all your creations. Go ahead and upload more recipes.</p>
</div>
<div class="text-center">
  <img id="iconCocktail" src="/images/icon.png" class="rounded" alt="cocktail icon">
</div>

{{#each cocktail}}
  
  <div class="card text-white bg-secondary mb-3" style="max-width: 18rem;">
  <div class="card-header"><b>Author: {{author}}</b></div>
  <div class="card-body">
    <h4 class="card-title"><b>{{name}}</b></h4>
    <p class="card-text">Ingredients:</p>
    <p class="card-text">{{ingredient1}}</p>
    <p class="card-text">{{ingredient2}}</p>
    <p class="card-text">{{ingredient3}}</p>
    <p class="card-text">{{ingredient4}}</p>
    <p class="card-text">{{ingredient5}}</p>
    <p class="card-text">{{ingredient6}}</p>
    <p class="card-text">{{ingredient7}}</p>
    <p class="card-text">{{ingredient8}}</p>
    <p class="card-text">{{ingredient9}}</p>
    <p class="card-text">Preparation:<br><br>{{instructions}}</p>
  </div>
</div>
  <form action="{{id}}/delete" method="POST">
      <button type="submit" class="btn btn-outline-danger">Delete</button>
  </form>
  <br>
  <button><a href="{{id}}/edit">Edit data</a></button>
  <br>
  <br>
{{/each}}
<br>
<a href="/create-recipe">Create recipe</a>
