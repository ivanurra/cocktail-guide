<form action="/{{id}}" method="POST">

        <div class="input-group mb-3">
            <input type="text" name="author" id="author" value="{{author}}" class="form-control" placeholder="Author" aria-label="Username"
                aria-describedby="basic-addon1">
        </div>

        <div class="input-group mb-3">
            <input type="text" name="name" id="name" value="{{name}}" class="form-control" placeholder="Cocktail Name. Required." required="true"
                minlength="1" aria-label="Username" aria-describedby="basic-addon1">
        </div>

        <div class="input-group mb-3">
            <input type="text" name="ingredient1" id="ingredient1" value="{{ingredient1}}" class="form-control" placeholder="Ingredient 1. Required."
                required="true" minlength="1" aria-label="Username" aria-describedby="basic-addon1">
        </div>

        <div class="input-group mb-3">
            <input type="text" name="ingredient2" id="ingredient2" value="{{ingredient2}}" class="form-control" placeholder="Ingredient 2"
                aria-label="Username" aria-describedby="basic-addon1">
        </div>

        <div class="input-group mb-3">
